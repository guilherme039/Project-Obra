{
    "buildCommand": "npx vite build",
    "outputDirectory": "dist",
    "functions": {
        "api/index.ts": {
            "runtime": "@vercel/node@3"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/auth/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/health",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}